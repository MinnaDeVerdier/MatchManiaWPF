<Window x:Class="MatchManiaWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MatchManiaWPF"
        mc:Ignorable="d"
        Title="Match Mania" Height="530" Width="340">
    <Grid>
        <ComboBox HorizontalAlignment="Center" Margin="0,213,0,0" VerticalAlignment="Top" Width="120" x:Name="SportVal">
            <ComboBoxItem Content="Basket"/>
            <ComboBoxItem Content="Curling"/>
            <ComboBoxItem Content="Fotboll"/>
            <ComboBoxItem Content="Ishockey"/>
            <ComboBoxItem Content="Wrestling"/>
        </ComboBox>
        <TextBlock HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap" Text="MATCH MANIA v0.0" VerticalAlignment="Top" Foreground="#FF861414" FontSize="36"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,183,0,0" TextWrapping="Wrap" Text="Välj Sport" VerticalAlignment="Top" Width="54"/>
        <Button Name="okButton" Content="OK" Width="75" Height="20" HorizontalAlignment="Center" Click="OKButton_Click" Margin="0,249,0,200"/>
    </Grid>
</Window>
